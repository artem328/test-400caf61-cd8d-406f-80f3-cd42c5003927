{# @var history App\History\HistoryEntry[] #}
{% extends 'base.html.twig' %}

{% block body %}
    <form method="POST" action="{{ url('history') }}">
        {{ form_widget(form) }}

        <button type="submit">Submit</button>
    </form>

    {% if history is not null %}
        {% if history is not empty %}
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Open</th>
                        <th>High</th>
                        <th>Low</th>
                        <th>Close</th>
                        <th>Volume</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in history %}
                        <tr>
                            <td>{{ item.date|date('Y/m/d') }}</td>
                            <td>{{ item.open }}</td>
                            <td>{{ item.high }}</td>
                            <td>{{ item.low }}</td>
                            <td>{{ item.close }}</td>
                            <td>{{ item.volume }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>No results</div>
        {% endif %}
    {% endif %}
{% endblock %}