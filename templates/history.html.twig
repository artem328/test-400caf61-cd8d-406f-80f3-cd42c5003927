{# @var history App\History\HistoryEntry[] #}
{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}
{% block heading %}History{% endblock %}

{% block content %}
    {{ form_start(form, {action: url('history')}) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    {{ form_end(form) }}

    {% if history is not null %}
        {% if history is not empty %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Open</th>
                        <th>High</th>
                        <th>Low</th>
                        <th>Close</th>
                        <th>Volume</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in history %}
                        <tr>
                            <td>{{ item.date|date('Y/m/d') }}</td>
                            <td>{{ item.open }}</td>
                            <td>{{ item.high }}</td>
                            <td>{{ item.low }}</td>
                            <td>{{ item.close }}</td>
                            <td>{{ item.volume }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>No results</div>
        {% endif %}
    {% endif %}
{% endblock %}